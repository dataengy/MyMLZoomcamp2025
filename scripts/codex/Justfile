# Codex utility tasks live here.

set shell := ["bash", "-euo", "pipefail", "-c"]
JUST_DIR := justfile_directory()

help:
    @echo "Codex utilities (Justfile)"
    @echo "  just -f scripts/codex/Justfile install-skills [args...]"
    @echo "  just -f scripts/codex/Justfile install-skills-force"

# Pass through any args to install_local_skills.sh.
install-skills *args:
    {{JUST_DIR}}/install_local_skills.sh {{args}}

install-skills-force:
    {{JUST_DIR}}/install_local_skills.sh --force
